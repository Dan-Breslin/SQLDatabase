<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/eText_PassConfirm"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginBottom="86dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_NewUser"
        app:layout_constraintEnd_toEndOf="@+id/eText_Pass"
        app:layout_constraintStart_toStartOf="@+id/eText_Pass"
        app:layout_constraintTop_toBottomOf="@+id/eText_Pass" />

    <EditText
        android:id="@+id/eText_Email"
        android:layout_width="213dp"
        android:layout_height="0dp"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/eText_Pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eText_Pass"
        android:layout_width="213dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/eText_PassConfirm"
        app:layout_constraintEnd_toEndOf="@+id/eText_Email"
        app:layout_constraintStart_toStartOf="@+id/eText_Email"
        app:layout_constraintTop_toBottomOf="@+id/eText_Email" />

    <Button
        android:id="@+id/btn_NewUser"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="262dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/eText_PassConfirm"
        app:layout_constraintStart_toStartOf="@+id/eText_PassConfirm"
        app:layout_constraintTop_toBottomOf="@+id/eText_PassConfirm" />
</androidx.constraintlayout.widget.ConstraintLayout>